<% layout("/layouts/boilerplate.ejs") %>

    <body>

        <div class="container">
            <h2>Land Form</h2>
            <form action="/landfill_transfer/createLandFill" method="post" id="landForm">
                <div class="form-group">
                    <label for="capacity">Capacity:</label>
                    <input type="number" id="capacity" name="capacity" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="gps_location_x">GPS Location (X):</label>
                    <input type="number" id="gps_location_x" name="gps_location_x" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="gps_location_y">GPS Location (Y):</label>
                    <input type="number" id="gps_location_y" name="gps_location_y" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary">
                </div>
            </form>
        </div>

        <!-- Include Bootstrap CSS and JavaScript files -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    </body>